<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="CursoXamarinMhtec.Views.CadastrarCliente"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout Margin="32">
            <Label Text="Nome do Cliente" TextColor="Black" />
            <Entry HorizontalOptions="FillAndExpand" Text="{Binding Cliente.Nome}" />
            <Button
                Margin="32,16,32,0"
                BackgroundColor="{StaticResource CorPrincipal}"
                Command="{Binding OnCadastrarCliente}"
                CornerRadius="8"
                Text="{Binding TextoAcao}"
                TextColor="White" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
